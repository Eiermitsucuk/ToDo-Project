          background-color: #F8F9FA;
          color: #121212;
          font-family: 'Calibri', sans-serif;
      }
  </style>
</head>

<body>
<header>
  <h1>To Do App</h1>
  <nav>

  </nav>
</header>

<main>
  <%= yield %>
  <ul>
    <% if user_signed_in? %>
      <li>
        <%= button_to 'Logout', destroy_user_session_path, method: :delete %>
      </li>
    <% end %>
  </ul>
</main>
</body>
